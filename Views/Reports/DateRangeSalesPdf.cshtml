@model List<MiniERPsystem.Models.DailySalesReport>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Sales Report PDF</title>
    <style>
        body {
            font-family: Arial;
            font-size: 12px;
        }

        h2 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #000;
            padding: 6px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

    <h2>Sales Report</h2>

    <p>
        <strong>From:</strong> @ViewBag.FromDate &nbsp;&nbsp;
        <strong>To:</strong> @ViewBag.ToDate
    </p>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Total Sales (₹)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.TotalAmount</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>

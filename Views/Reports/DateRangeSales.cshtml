
@model List<MiniERPsystem.Models.DailySalesReport>

@{
    ViewData["Title"] = "Date Range Sales Report";
}

<h3>Date Range Sales Report</h3>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <label>From Date</label>
        <input type="date" name="fromDate"
               value="@ViewBag.FromDate"
               class="form-control" />
    </div>

    <div class="col-md-4">
        <label>To Date</label>
        <input type="date" name="toDate"
               value="@ViewBag.ToDate"
               class="form-control" />
    </div>

    <div class="col-md-4 d-flex align-items-end">
        <button type="submit" class="btn btn-primary">
            Apply Filter
        </button>
    </div>
</form>

<a class="btn btn-success mb-3"
   href="/Reports/ExportDateRangeSales?fromDate=@ViewBag.FromDate&toDate=@ViewBag.ToDate">
    Export to Excel
</a>
<a class="btn btn-danger mb-3"
   href="/Reports/ExportDateRangeSalesPdf?fromDate=@ViewBag.FromDate&toDate=@ViewBag.ToDate">
    Export to PDF
</a>


<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Date</th>
            <th>Total Sales (₹)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>₹ @item.TotalAmount</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">
                    No sales found for selected range.
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h4>Sales Chart</h4>

<canvas id="rangeSalesChart" width="900" height="400"></canvas>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        const labels = @Html.Raw(
                        System.Text.Json.JsonSerializer.Serialize(
                                ViewBag.Labels ?? new List<string>()
                        )
                );

        const values = @Html.Raw(
                        System.Text.Json.JsonSerializer.Serialize(
                                ViewBag.Amounts ?? new List<decimal>()
                        )
                );

        if (labels.length === 0) return;

        const ctx = document.getElementById("rangeSalesChart").getContext("2d");

        new Chart(ctx, {
            type: "bar",
            data: {
                labels: labels,
                datasets: [{
                    label: "Sales (₹)",
                    data: values,
                    backgroundColor: "rgba(255, 159, 64, 0.6)"
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    });
</script>

@model IEnumerable<MiniERPsystem.Models.Product>

@{
    ViewData["Title"] = "Deleted Products";
}

<h2 class="mb-3">Deleted Products</h2>
<p class="text-muted mb-4">
    Restore products that were previously removed from inventory.
</p>


<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted py-4">
                    No deleted products found.
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.StockQuantity</td>
                    <td>
                        <form asp-action="Restore" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-success">
                                Restore
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>


@model MiniERPsystem.Models.User

@{
    ViewData["Title"] = "Edit User Role";
}

<h3>Edit User Role</h3>

<form asp-action="EditUser" method="post">

    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label>Full Name</label>
        <input class="form-control" value="@Model.FullName" disabled />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input class="form-control" value="@Model.Email" disabled />
    </div>

    <div class="mb-3">
        <label>Role</label>
        <select asp-for="Role" class="form-select">
            <option value="Admin">Admin</option>
            <option value="Staff">Staff</option>
        </select>
    </div>


    <button type="submit" class="btn btn-primary">Update Role</button>
    <a asp-action="Users" class="btn btn-secondary">Back</a>

</form>
